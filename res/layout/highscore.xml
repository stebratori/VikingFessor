<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@drawable/alert_bck_cropped"
    android:baselineAligned="false"
    android:weightSum="5"
    tools:ignore="ContentDescription" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/gameBoardStatisticsMedal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="53dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/coins_small" />

            <TextView
                android:id="@+id/highscoreOverallCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gameBoardStatisticsMedal"
                android:layout_alignRight="@+id/gameBoardStatisticsMedal"
                android:layout_below="@+id/gameBoardStatisticsMedal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/gameBoardStatisticsMedal"
                android:src="@drawable/gold_small" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imageView3"
                android:src="@drawable/silver_small" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/imageView4"
                android:src="@drawable/bronze_small" />

            <TextView
                android:id="@+id/highscoreOverallGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscoreOverallCoins"
                android:layout_alignBottom="@+id/highscoreOverallCoins"
                android:layout_alignLeft="@+id/imageView3"
                android:layout_alignRight="@+id/imageView3"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/highscoreOverallSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView4"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView4"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <TextView
                android:id="@+id/highscoreOverallBronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView5"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1" >

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="17dp"
                android:scaleType="fitXY"
                android:src="@drawable/plus_button" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView6"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@+id/imageView6"
                android:src="@drawable/coins_small" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ImageView02"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@+id/ImageView02"
                android:src="@drawable/gold_small" />

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImageView04"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@+id/ImageView04"
                android:src="@drawable/silver_small" />

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImageView05"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_toRightOf="@+id/ImageView05"
                android:src="@drawable/bronze_small" />

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView03"
                android:layout_alignTop="@+id/ImageView09"
                android:src="@drawable/bronze_small" />

            <ImageView
                android:id="@+id/ImageView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView04"
                android:layout_alignTop="@+id/ImageView06"
                android:src="@drawable/gold_small" />

            <ImageView
                android:id="@+id/ImageView09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView05"
                android:layout_alignTop="@+id/ImageView08"
                android:src="@drawable/silver_small" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignLeft="@+id/imageView6"
                android:layout_below="@+id/imageView6"
                android:layout_marginTop="65dp"
                android:scaleType="fitXY"
                android:src="@drawable/minus_button" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/imageView6"
                android:layout_alignParentTop="true"
                android:layout_marginTop="3dp"
                android:background="#000000" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/ImageView01"
                android:layout_centerVertical="true"
                android:background="#000000" >
            </RelativeLayout>

            <TextView
                android:id="@+id/highscorePlusCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView02"
                android:layout_alignRight="@+id/ImageView02"
                android:layout_below="@+id/ImageView02"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/highscorePlusGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscorePlusCoins"
                android:layout_alignBottom="@+id/highscorePlusCoins"
                android:layout_alignLeft="@+id/ImageView04"
                android:layout_alignRight="@+id/ImageView04"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/highscorePlusSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscorePlusGold"
                android:layout_alignBottom="@+id/highscorePlusGold"
                android:layout_alignLeft="@+id/ImageView05"
                android:layout_alignRight="@+id/ImageView05"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/highscorePlusBronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscorePlusSilver"
                android:layout_alignBottom="@+id/highscorePlusSilver"
                android:layout_alignLeft="@+id/ImageView03"
                android:layout_alignRight="@+id/ImageView03"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/highscorePlusCoins"
                android:layout_alignTop="@+id/ImageView01"
                android:src="@drawable/coins_small" />

            <TextView
                android:id="@+id/highscoreMinusCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView06"
                android:layout_alignRight="@+id/ImageView06"
                android:layout_below="@+id/ImageView06"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/highscoreMinusGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscoreMinusCoins"
                android:layout_alignBottom="@+id/highscoreMinusCoins"
                android:layout_alignLeft="@+id/ImageView08"
                android:layout_alignRight="@+id/ImageView08"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <TextView
                android:id="@+id/highscoreMinusSilver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/highscoreMinusGold"
                android:layout_alignBottom="@+id/highscoreMinusGold"
                android:layout_alignLeft="@+id/ImageView09"
                android:layout_alignRight="@+id/ImageView09"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <TextView
                android:id="@+id/highscoreMinusBronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/ImageView07"
                android:layout_alignRight="@+id/ImageView07"
                android:layout_below="@+id/ImageView07"
                android:gravity="center_vertical|center_horizontal"
                android:text="000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF7F00" />

            <ImageView
                android:id="@+id/highscoreImgPlusFaroe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgPlusIceland"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/highscoreImgPlusIceland"
                android:scaleType="fitXY"
                android:src="@drawable/locked"
                android:background="@drawable/faroe_btn" />

            <ImageView
                android:id="@+id/highscoreImgPlusDenmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgPlusNorway"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/highscoreImgPlusNorway"
                android:src="@drawable/locked"
                android:background="@drawable/denmark_btn" />

            <ImageView
                android:id="@+id/highscoreImgPlusSweden"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgPlusDenmark"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/highscoreImgPlusDenmark"
                android:src="@drawable/locked"
                android:background="@drawable/sweden_btn" />

            <ImageView
                android:id="@+id/highscoreImgPlusFinland"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgPlusSweden"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/highscoreImgPlusSweden"
                android:src="@drawable/locked"
                android:background="@drawable/finland_btn" />

            <ImageView
                android:id="@+id/highscoreImgPlusNorway"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgPlusFaroe"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/highscoreImgPlusFaroe"
                android:src="@drawable/locked"
                android:background="@drawable/norway_btn" />

            <ImageView
                android:id="@+id/highscoreImgPlusIceland"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/highscorePlusCoins"
                android:layout_marginRight="-5dp"
                android:layout_toLeftOf="@+id/ImageView02"
                android:scaleType="fitXY"
                android:src="@drawable/locked"
                android:background="@drawable/iceland_btn" />

            <ImageView
                android:id="@+id/ImageView15"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/highscoreImgPlusFinland"
                android:layout_below="@+id/highscoreMinusBronze"
                android:src="@drawable/locked"
                android:background="@drawable/finland_btn" />
	
            <ImageView
                android:id="@+id/ImageView14"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/highscoreImgPlusSweden"
                android:layout_alignTop="@+id/ImageView15"
                android:src="@drawable/locked"
                android:background="@drawable/sweden_btn" />

            <ImageView
                android:id="@+id/highscoreImgMinusDenmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/highscoreImgPlusDenmark"
                android:layout_below="@+id/highscoreMinusGold"
                android:src="@drawable/locked"
                android:background="@drawable/denmark_btn" />

            <ImageView
                android:id="@+id/highscoreImgMinusNorway"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/highscoreImgMinusDenmark"
                android:layout_toRightOf="@+id/highscoreMinusCoins"
                android:src="@drawable/locked"
                android:background="@drawable/norway_btn" />

            <ImageView
                android:id="@+id/highscoreImgMinusFaroe"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/highscoreImgPlusFaroe"
                android:layout_alignTop="@+id/highscoreImgMinusNorway"
                android:scaleType="fitXY"
                android:src="@drawable/locked"
                android:background="@drawable/faroe_btn" />

            <ImageView
                android:id="@+id/highscoreImgMinusIceland"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/highscoreImgPlusIceland"
                android:layout_alignTop="@+id/highscoreImgMinusFaroe"
                android:scaleType="fitXY"
                android:src="@drawable/locked"
                android:background="@drawable/iceland_btn" />

        </RelativeLayout>

    </RelativeLayout>

    <!-- Medals and coins -->


    <!-- Fessor icon -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" >

        <ImageView
            android:id="@+id/highscoreImgFessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:src="@drawable/costume_gray" />

        <Button
            android:id="@+id/highscoreBtnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/highscoreImgFessor"
            android:background="#0000"
            android:gravity="center_vertical|center_horizontal"
            android:text=">"
            android:textColor="#FF7F00"
            android:textSize="30sp" />

        <Button
            android:id="@+id/highscoreBtnPrev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/highscoreBtnNext"
            android:layout_alignBottom="@+id/highscoreBtnNext"
            android:layout_toLeftOf="@+id/highscoreImgFessor"
            android:background="#0000"
            android:gravity="center_vertical|center_horizontal"
            android:text="&lt;"
            android:textColor="#FF7F00"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/highscorePlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/highscoreImgFessor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Stefan Brankovic the great"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF7F00" />

        <ImageButton
            android:id="@+id/highscoreBackToMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="#0000"
            android:src="@drawable/right" />

    </RelativeLayout>

</LinearLayout>