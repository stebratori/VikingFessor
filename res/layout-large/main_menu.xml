<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_bck_cropped" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:layout_marginRight="28dp"
        android:scaleType="fitEnd"
        android:src="@drawable/viking_throne_original" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="41dp"
        android:src="@drawable/viking_fessor" />

    <Button
        android:id="@+id/newGameBtnDeleteAlertShow"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/menu_new"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="     New Game"
        android:textColor="#FF7F00"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/newGameBtnPickPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newGameBtnDeleteAlertShow"
        android:layout_below="@+id/newGameBtnDeleteAlertShow"
        android:layout_marginTop="41dp"
        android:background="@drawable/menu_highscore"
        android:gravity="left|center_vertical|center_horizontal"
        android:text="     Highscore"
        android:textColor="#FF7F00"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
