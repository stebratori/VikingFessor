<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desktop_with_sticky_note" >

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="102dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/plusBtn"
        android:background="@drawable/sticky_minus"
        android:textSize="50sp" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignBottom="@+id/minusBtn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="131dp"
        android:layout_marginLeft="222dp"
        android:background="@drawable/sticky_plus"
        android:textSize="50sp" />

</RelativeLayout>